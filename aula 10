<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>votação</title>
</head>
<body>
    <h1>Vote em seu candidato:</h1>
    <button onclick="votar('lula')">Lula</button>
    <button onclick="votar('bolsonaro')">Bolsonaro</button>
    <h2>Resultados:</h2>
    <p id="votosLula">Lula: 0 voto(s)</p>
    <p id="votosBolsonaro">Bolsonaro: 0 voto(s)</p>
    
    <script src="votacao.js"></script>
    
    <script>
let votosLula = 0;
let votosBolsonaro = 0;


function votar(candidato) {
   
    if (candidato === 'lula') {
        votosLula++;
        alert('por isso que o brasil ta ruim')

    } else if (candidato === 'bolsonaro') {
        votosBolsonaro++;
        
        alert("Parabéns!");
    }
 
    atualizarResultados();
}


function atualizarResultados() {
   
    document.getElementById('votosLula').innerText = `Lula: ${votosLula} voto(s)`;
    document.getElementById('votosBolsonaro').innerText = `Bolsonaro: ${votosBolsonaro} voto(s)`;
}
    </script>
 
    
</body>
</html>
